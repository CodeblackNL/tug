{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TugDSC.Server.WebAppHost - .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            //"preLaunchTask": "build",
            "program": "${workspaceRoot}/src/TugDSC.Server.WebAppHost/bin/Debug/netcoreapp2.0/TugDSC.Server.WebAppHost.dll",
            "args": ["/h:host_foo:some:nested:value=host_bar", "/c:app_foo=app_bar"],
            "cwd": "${workspaceRoot}/src/TugDSC.Server.WebAppHost",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Tug.Client - .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Tug.Client/bin/Debug/netcoreapp1.0/Tug.Client.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/Tug.Client",
            "externalConsole": false,
            "stopAtEntry": false
        },
        {
            "name": "Tug.Server - .NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Tug.Server/bin/Debug/netcoreapp1.0/Tug.Server.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/tug/bin/Debug/netcoreapp1.0/tug.dll",
            "args": [],
            "cwd": "${workspaceRoot}/tug",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}